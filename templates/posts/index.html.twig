{% extends 'base.html.twig' %}

{% block title %}Hello PostsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="categories_table" class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Id post</th>
                            <th>Info</th>
                            <th>Adddate</th>
                            <th>Is active</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr>
                                <td>{{ post.id }}</td>
                                <td>{{ post.info }}</td>
                                <td>{{ post.getDateString }}</td>
                                <td>{{ post.is_active }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

    <div class="container">
        <div class="row">
            <div class="col-7 mx-auto mt-5">
                {{ form_start(form,{'attr':{'class':'form-material m-t-40'}}) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
